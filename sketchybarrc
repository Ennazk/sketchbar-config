#!/bin/bash

source "$CONFIG_DIR/colors.sh"

PLUGIN_DIR="$CONFIG_DIR/plugins"
ITEM_DIR="$CONFIG_DIR/items"

##### Bar Appearance #####
sketchybar --bar height=37        \
                 blur_radius=30   \
                 position=top     \
                 sticky=off       \
                 padding_left=10  \
                 padding_right=10 \
                 color=$BAR_COLOR

##### Changing Defaults #####
sketchybar --default icon.font="Menlo:Bold:15.0"  \
                     icon.color=0xffffffff                 \
                     label.font="Menlo:Bold:15.0" \
                     label.color=0xffffffff                \
                     background.drawing=off                    \
                     background.color=$ITEM_BG_COLOR       \
                     background.corner_radius=5            \
                     background.height=24                  \
                     padding_left=1                        \
                     padding_right=1                       \
                     label.padding_left=2                  \
                     label.padding_right=2                 \
                     icon.padding_left=2                   \
                     icon.padding_right=2

##### Adding Left Items #####
source $ITEM_DIR/apple_logo.sh
source $ITEM_DIR/separator_left.sh
source $ITEM_DIR/front_app.sh

##### Adding Right Items #####
source $ITEM_DIR/calendar.sh
source $ITEM_DIR/volume_separator.sh
source $ITEM_DIR/volume.sh
source $ITEM_DIR/battery_separator.sh
source $ITEM_DIR/battery.sh
source $ITEM_DIR/dnd.sh

##### Finalizing Setup #####
sketchybar --update
